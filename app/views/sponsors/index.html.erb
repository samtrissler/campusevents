<p id="notice"><%= notice %></p>

<% content_for(:pagetitle) do %>
Sponsor Listings
<% end %>

<% content_for(:sidebar) do %>
Hello, world!!!
<% end %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= sponsor.name %></td>
        <td><%= sponsor.url %></td>
        <td><%= sponsor.logo %></td>
        <td><%= link_to 'Show', sponsor, :class => "btn btn-info"  %></td>
        <td><%= link_to 'Edit', edit_attendee_path(sponsor), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', sponsor, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

