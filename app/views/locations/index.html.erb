<p id="notice"><%= notice %></p>

<% content_for(:pagetitle) do %>
Location Listings
<% end %>

<% content_for(:sidebar) do %>
Hello, world!!!
<% end %>


<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Map url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.description %></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= location.map_url %></td>
        <td><%= link_to 'Show', location, :class => "btn btn-info"  %></td>
        <td><%= link_to 'Edit', edit_attendee_path(location), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

