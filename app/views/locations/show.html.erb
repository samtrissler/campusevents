<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @location.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @location.description %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @location.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @location.longitude %>
</p>

<p>
  <strong>Map url:</strong>
  <%= @location.map_url %>
</p>

<p>
  <strong>Next 5 Meeting Locations:</strong>

</p>


<table class="table table-bordered table-striped">
    <thead>
        <tr>

            <th>
                Meetings</th>
            <th>Meeting Start Time</th>
            <th>Meetings End Time</th>
            <th>Meetings Location</th>

        </tr>
    </thead>

    <tbody>
        <% %>
        <tr>

            <td>
                <% if @location.meetings.present? %>
                <% @location.meetings.first(5).each do |meetings| %>
                <%= meetings.name %>
                <br>
                <% end %>
                <% end %>
            </td>
            <td>
                <% if @location.meetings.present? %>
                <% @location.meetings.first(5).each do |meetings| %>
                <%= meetings.start_time %>
                <br>
                <% end %>
                <% end %>
            </td>
            <td>
                <% if @location.meetings.present? %>
                <% @location.meetings.first(5).each do |meetings| %>
                <%= meetings.end_time %>
                <br>
                <% end %>
                <% end %>
            </td>
            <td>
                <% if @location.meetings.present? %>
                <% @location.meetings.first(5).each do |meetings| %>
                <%= meetings.location.name %>
                <br>
                <% end %>
                <% end %>
            </td>

        </tr>

    </tbody>
</table>


<%= link_to 'Edit', edit_location_path(@location), :class => "btn btn-warning" %> |
<%= link_to 'Back', locations_path, :class => "btn btn-info" %>
