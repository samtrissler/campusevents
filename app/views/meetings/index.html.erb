<p id="notice"><%= notice %></p>

<h1>Listing Meetings</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Event</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.name %></td>
        <td><%= meeting.description %></td>
        <td>
          <% if meeting.location.present? %>
      <%= meeting.location.name %>
          <% end %>
          </td>
          <td>
          <% if meeting.event.present? %>
      <%= meeting.event.name %>
          <% end %>
          </td>
        <td><%= meeting.start_time %></td>
        <td><%= meeting.end_time %></td>
        <td><%= link_to 'Show', meeting, :class => "btn btn-info"  %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

