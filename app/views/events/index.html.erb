<p id="notice"><%= notice %></p>

<% content_for(:pagetitle) do %>
Event Listings
<% end %>

<% content_for(:sidebar) do %>
HELLO WORLD!

<% end %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Url</th>
      <th>Sponsor(s)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>

    <tr>
        <td><%= event.name %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.url %></td>

          <td>
          <% if event.sponsors.present? %>
          <% event.sponsors.each do |sponsors| %>
          <%=  sponsors.name %>
          <br>
        <% end %>
        </td>

        <td><%= link_to 'Show', event, :class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_event_path(event), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
