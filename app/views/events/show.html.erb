<p id="notice"><%= notice %></p>

<% content_for(:pagetitle) do %>
Event Details
<% end %>

<% content_for(:sidebar) do %>

<%= render "event_sponsorListing" %>
<% end %>

<p>
    <strong>Name:</strong>
    <%= @event.name %>
</p>

<p>
    <strong>Start date:</strong>
    <%= @event.start_date %>
</p>

<p>
    <strong>End date:</strong>
    <%= @event.end_date %>
</p>

<p>
    <strong>Url:</strong>
    <%= @event.url %>
</p>

<p>
    <strong>Sponsors:</strong>
    <% if @event.sponsors.present? %>
    <% @event.sponsors.each do |sponsors| %>
    <%= sponsors.name %>
    <br>
    <% end %>
    <% end %>

</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>

            <th>
                Meetings</th>
            <th>Meeting Start Time</th>
            <th>Meetings End Time</th>
            <th>Meetings Location</th>

        </tr>
    </thead>

    <tbody>
        <% %>
        <tr>

            <td>
                <% if @event.meetings.present? %>
                <% @event.meetings.each do |meetings| %>
                <%= meetings.name %>
                <br>
                <% end %>
                <% end %>
            </td>
            <td>
                <% if @event.meetings.present? %>
                <% @event.meetings.each do |meetings| %>
                <%= meetings.start_time %>
                <br>
                <% end %>
                <% end %>
            </td>
            <td>
                <% if @event.meetings.present? %>
                <% @event.meetings.each do |meetings| %>
                <%= meetings.end_time %>
                <br>
                <% end %>
                <% end %>
            </td>
            <td>
                <% if @event.meetings.present? %>
                <% @event.meetings.each do |meetings| %>
                <%= meetings.location.name %>
                <br>
                <% end %>
                <% end %>
            </td>

        </tr>

    </tbody>
</table>

<%= link_to 'Edit', edit_event_path(@event), :class => "btn btn-primary" %>
|
<%= link_to 'Back', events_path, :class => "btn btn-warning" %>
