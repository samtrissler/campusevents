<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.date_select :end_date %>
  </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>


  <div class="field">
    <%= f.label :sponsor_ids %><br>
  </div>

  <div class="field">

      <% Sponsor.all.each do |c| %>

        <%= check_box_tag "event[sponsor_ids][]", c.id, @event.sponsors.include?(c) %>

        <%= c.name %>
      <% end %>

  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
